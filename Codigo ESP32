            dato = 0;
          }

        }

      }
      }
      else if(key == '5')
      {
        if(key == '5')
      {
        lcd.clear();
        lcd.setCursor(0, 0);
        lcd.print("Seleccione su");
        lcd.setCursor(0, 1);
        lcd.print("Snack: 5");
        delay(2000);
        int dato = 1;
