      }
      }
      else if(key == '4')
      {
        if(key == '4')
      {
        lcd.clear();
        lcd.setCursor(0, 0);
        lcd.print("Seleccione su");
        lcd.setCursor(0, 1);
        lcd.print("Snack: 4");
        delay(2000);
        int dato = 1;
