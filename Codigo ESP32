      }
      else if(key == '*')
      {
        reinicio();
      }

    }
    }
  }

  mfrc522.PICC_HaltA();
}
boolean comparaUID(byte lectura[], byte usuario[]) {
  for (byte i = 0; i < mfrc522.uid.size; i++) {
    if (lectura[i] != usuario[i]) {
      return false;
    }
  }
  return true;
}

// Salida para los servos motors
void menu(int opcion){
    switch (opcion) {
        case 1:

            Serial.println("Seleccionaste la opci칩n 1");
            digitalWrite(16, LOW);
            digitalWrite(15, LOW);
            digitalWrite(4, LOW);
            digitalWrite(2, HIGH);
            delay(1000);
            digitalWrite(16, LOW);
            digitalWrite(15, LOW);
            digitalWrite(4, LOW);
            digitalWrite(2, LOW);
            delay(500);
            reinicio();
            break;
        case 2:
            
            Serial.println("Seleccionaste la opci칩n 2");
            digitalWrite(16, LOW);
            digitalWrite(15, LOW);
            digitalWrite(4, HIGH);
            digitalWrite(2, LOW);
            delay(1000);
            digitalWrite(16, LOW);
            digitalWrite(15, LOW);
            digitalWrite(4, LOW);
            digitalWrite(2, LOW);
            delay(200);
            reinicio();
            break;
        case 3:
            Serial.println("Seleccionaste la opci칩n 3");
            digitalWrite(16, LOW);
            digitalWrite(15, LOW);
            digitalWrite(4, HIGH);
            digitalWrite(2, HIGH);
            delay(1000);
            digitalWrite(16, LOW);
            digitalWrite(15, LOW);
            digitalWrite(4, LOW);
            digitalWrite(2, LOW);
            delay(200);
            reinicio();
            break;
        case 4:
            Serial.println("Seleccionaste la opci칩n 4");
            digitalWrite(16, LOW);
            digitalWrite(15, HIGH);
            digitalWrite(4, LOW);
            digitalWrite(2, LOW);
            delay(1000);
            digitalWrite(16, LOW);
            digitalWrite(15, LOW);
            digitalWrite(4, LOW);
            digitalWrite(2, LOW);
            delay(200);
            reinicio();
        break;

        case 5:
           Serial.println("Seleccionaste la opci칩n 5");
            digitalWrite(16, LOW);
            digitalWrite(15, HIGH);
            digitalWrite(4, LOW);
            digitalWrite(2, HIGH);
            delay(1000);
            digitalWrite(16, LOW);
            digitalWrite(15, LOW);
            digitalWrite(4, LOW);
            digitalWrite(2, LOW);
            delay(200);
            reinicio();
        break;

        case 6:
            Serial.println("Seleccionaste la opci칩n 6");
            digitalWrite(16, LOW);
            digitalWrite(15, HIGH);
            digitalWrite(4, HIGH);
            digitalWrite(2, LOW);
            delay(1000);
            digitalWrite(16, LOW);
            digitalWrite(15, LOW);
            digitalWrite(4, LOW);
            digitalWrite(2, LOW);
            delay(200);
            reinicio();
        break;
        case 7:
            Serial.println("Seleccionaste la opci칩n 7");
            digitalWrite(16, LOW);
            digitalWrite(15, HIGH);
            digitalWrite(4, HIGH);
            digitalWrite(2, HIGH);
            delay(1000);
            digitalWrite(16, LOW);
            digitalWrite(15, LOW);
            digitalWrite(4, LOW);
            digitalWrite(2, LOW);
            delay(200);
            reinicio();
        break;
        case 8:
          Serial.println("Seleccionaste la opci칩n 8");
            digitalWrite(16, HIGH);
            digitalWrite(15, LOW);
            digitalWrite(4, LOW);
            digitalWrite(2, LOW);
            delay(1000);
            digitalWrite(16, LOW);
            digitalWrite(15, LOW);
            digitalWrite(4, LOW);
            digitalWrite(2, LOW);
            delay(200);
            reinicio();
        break;

        case 9:
           Serial.println("Seleccionaste la opci칩n 9");
            digitalWrite(16, HIGH);
            digitalWrite(15, LOW);
            digitalWrite(4, LOW);
            digitalWrite(2, HIGH);
            delay(1000);
            digitalWrite(16, LOW);
            digitalWrite(15, LOW);
            digitalWrite(4, LOW);
            digitalWrite(2, LOW);
            delay(200);
            reinicio();
        break;
        default:
            Serial.println("Opcion no reconocida");
            
            break;
    }
} 

void reinicio()
{
  delay(1000);
  ESP.restart();

}
