          {
            lcd.clear();
            delay(200);
            dato = 0;
          }

        }

      }
      }
            else if(key == '3')
      {
        if(key == '3')
      {
        lcd.clear();
        lcd.setCursor(0, 0);
        lcd.print("Seleccione su");
        lcd.setCursor(0, 1);
        lcd.print("Snack: 3");
        delay(2000);
